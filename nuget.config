<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Allow self-signed certificates for local HTTPS endpoint -->
  <config>
    <add key="allowInsecureConnections" value="true" />
  </config>
  
  <packageSources>
    <clear />
    <!-- Private BaGet server on HTTP port 80 -->
    <add key="BaGet" value="http://100.88.41.52/v3/index.json" allowInsecureConnections="True" />
    <!-- Public sources (fallback) -->
    <add key="bepinex" value="https://nuget.bepinex.dev/v3/index.json" />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
  </packageSources>
  
  <!-- BaGet credentials from environment variable BAGET_API_KEY -->
  <packageSourceCredentials>
    <BaGet>
      <add key="Username" value="__token__" />
      <add key="ClearTextPassword" value="%BAGET_API_KEY%" />
    </BaGet>
  </packageSourceCredentials>
</configuration>
