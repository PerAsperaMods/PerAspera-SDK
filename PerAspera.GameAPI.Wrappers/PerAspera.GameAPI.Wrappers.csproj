<Project Sdk="Microsoft.NET.Sdk">
	<!-- Import SDK versioning -->
	<Import Project="..\Version.props" />
	
	<PropertyGroup>
		<AssemblyName>PerAspera.GameAPI.Wrappers</AssemblyName>
		<RootNamespace>PerAspera.GameAPI.Wrappers</RootNamespace>
		<PackageId>PerAspera.GameAPI.Wrappers</PackageId>
		<Description>Public API wrappers for Per Aspera game classes - Safe abstraction layer for modders</Description>
		<PackageTags>per-aspera;wrappers;api;modding;public-api</PackageTags>
